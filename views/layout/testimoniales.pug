extends index
    
block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./bloque-testimoniales

        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial
                if(error)
                    each e in error
                        .alert.col.alert-danger.text-center= e.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control", value= nombre)
                        .form-group
                            label(for="correo") Correo Electrónico
                            input#correo(type="email", placeholder="Tu correo electrónico", name="correo", class="form-control" value= correo)
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje", rows="3", class="form-control", placeholder="Tu mensaje")= mensaje
                        input.btn.btn-success.btn-block(type="submit")
